@model IEnumerable<RS181977_TB181979_desafío01.Models.Transacciones>

@{
    ViewBag.Title = "Index";
}

<center><h2>Lista de transacciones</h2></center>

<p>

    <button type="button" class="btn btn-dark"> @Html.ActionLink("Crear registro", "Create", null, new { style = "color: white" })</button>
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CuentaBancarias.Moneda)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoTransacciones.Tipo_Transaccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Monto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaTransaccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaAplicación)
        </th>
        <th>Operaciones</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CuentaBancarias.Moneda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoTransacciones.Tipo_Transaccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaTransaccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaAplicación)
            </td>
            <td>
                <button type="button" class="btn btn-warning"> @Html.ActionLink("Editar", "Edit", new { id = item.id }, new { Style = "color: White" }) </button>

                <button type="button" style="color:white;" class="btn btn-info">@Html.ActionLink("Detalles", "Details", new { id = item.id }, new { Style = "color: White" }) </button>
                <button type="button" class="btn btn-danger"> @Html.ActionLink("Borrar", "Delete", new { id = item.id }, new { Style = "color: White" })</button>
            </td>
        </tr>
    }

</table>
